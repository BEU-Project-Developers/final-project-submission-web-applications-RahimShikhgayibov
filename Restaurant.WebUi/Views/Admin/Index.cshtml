@model List<UserManagementViewModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>İstifadəçi İdarəetməsi - Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            --danger-gradient: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
            --glass-bg: rgba(255, 255, 255, 0.25);
            --glass-border: rgba(255, 255, 255, 0.18);
            --dark-glass: rgba(0, 0, 0, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: var(--primary-gradient);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
            position: relative;
        }

            body::before {
                content: '';
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><defs><radialGradient id="a" cx="50%" cy="50%"><stop offset="0%" stop-color="%23ffffff" stop-opacity="0.1"/><stop offset="100%" stop-color="%23ffffff" stop-opacity="0"/></radialGradient></defs><circle cx="200" cy="200" r="100" fill="url(%23a)"/><circle cx="800" cy="300" r="150" fill="url(%23a)"/><circle cx="400" cy="700" r="120" fill="url(%23a)"/></svg>');
                animation: float 20s ease-in-out infinite;
                pointer-events: none;
                z-index: 0;
            }

        @@keyframes float {
            0%, 100%

        {
            transform: translateY(0px) rotate(0deg);
        }

        50% {
            transform: translateY(-20px) rotate(180deg);
        }

        }

        .admin-container {
            position: relative;
            z-index: 1;
            padding: 20px;
            min-height: 100vh;
        }

        .admin-header {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 25px 45px rgba(0, 0, 0, 0.1);
        }

            .admin-header h1 {
                color: white;
                font-weight: 700;
                margin: 0;
                display: flex;
                align-items: center;
                gap: 15px;
            }

            .admin-header .subtitle {
                color: rgba(255, 255, 255, 0.8);
                margin-top: 10px;
                font-size: 1.1rem;
            }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            flex-wrap: wrap;
            gap: 20px;
        }

        .btn-logout {
            background: var(--danger-gradient);
            border: none;
            color: white;
            padding: 10px 20px;
            border-radius: 12px;
            font-size: 0.95rem;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

            .btn-logout:hover {
                background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
                color: white;
            }

        .stats-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 15px;
            padding: 25px;
            text-align: center;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            }

            .stat-card .icon {
                font-size: 2.5rem;
                color: white;
                margin-bottom: 15px;
            }

            .stat-card .number {
                font-size: 2rem;
                font-weight: bold;
                color: white;
                margin-bottom: 5px;
            }

            .stat-card .label {
                color: rgba(255, 255, 255, 0.8);
                font-size: 0.9rem;
            }

        .main-card {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 20px;
            box-shadow: 0 25px 45px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .card-header-custom {
            background: var(--dark-glass);
            padding: 25px 30px;
            border-bottom: 1px solid var(--glass-border);
        }

            .card-header-custom h4 {
                color: white;
                margin: 0;
                font-weight: 600;
            }

        .btn-glass {
            background: var(--glass-bg);
            border: 1px solid var(--glass-border);
            color: white;
            backdrop-filter: blur(10px);
            border-radius: 10px;
            padding: 8px 16px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-glass:hover {
                background: rgba(255, 255, 255, 0.3);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
                color: white;
            }

        .btn-primary-glass {
            background: var(--secondary-gradient);
            border: none;
        }

        .btn-success-glass {
            background: var(--success-gradient);
            border: none;
        }

        .btn-danger-glass {
            background: var(--danger-gradient);
            border: none;
        }

        .table-container {
            padding: 30px;
            background: rgba(255, 255, 255, 0.05);
        }

        .table-glass {
            background: transparent;
            color: white;
        }

            .table-glass thead th {
                background: var(--dark-glass);
                border: 1px solid var(--glass-border);
                color: white;
                font-weight: 600;
                padding: 15px;
            }

            .table-glass tbody td {
                background: rgba(255, 255, 255, 0.05);
                border: 1px solid var(--glass-border);
                color: white;
                padding: 15px;
                vertical-align: middle;
            }

            .table-glass tbody tr:hover td {
                background: rgba(255, 255, 255, 0.1);
            }

        .avatar-circle {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: var(--secondary-gradient);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 1.2rem;
            margin-right: 15px;
        }

        .user-info {
            display: flex;
            align-items: center;
        }

        .user-details h6 {
            margin: 0;
            color: white;
            font-weight: 600;
        }

        .user-details small {
            color: rgba(255, 255, 255, 0.7);
        }

        .role-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
            margin: 2px;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

            .role-badge.admin {
                background: var(--danger-gradient);
                color: white;
            }

            .role-badge.user {
                background: var(--success-gradient);
                color: white;
            }

        .reservation-badge {
            background: var(--success-gradient);
            color: white;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .reservation-badge:hover {
                background: var(--secondary-gradient);
                transform: scale(1.05);
            }

        .action-buttons {
            display: flex;
            gap: 8px;
            flex-wrap: wrap;
        }

        .dropdown-glass .dropdown-menu {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

        .dropdown-glass .dropdown-item {
            color: white;
            transition: all 0.3s ease;
        }

            .dropdown-glass .dropdown-item:hover {
                background: rgba(255, 255, 255, 0.1);
                color: white;
            }

        .alert-glass {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            color: white;
            border-radius: 10px;
        }

        /* Rezervasiya Modal Stilləri */
        .modal-glass .modal-content {
            background: var(--glass-bg);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 15px;
            color: white;
        }

        .modal-glass .modal-header {
            border-bottom: 1px solid var(--glass-border);
        }

        .modal-glass .modal-footer {
            border-top: 1px solid var(--glass-border);
        }

        .reservation-item {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid var(--glass-border);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 15px;
            position: relative;
        }

            .reservation-item::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 4px;
                height: 100%;
                border-radius: 2px;
            }

            .reservation-item.pending::before {
                background: var(--danger-gradient);
            }

            .reservation-item.confirmed::before {
                background: var(--success-gradient);
            }

            .reservation-item.cancelled::before {
                background: #6c757d;
            }

        .status-badge {
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }

            .status-badge.pending {
                background: var(--danger-gradient);
                color: white;
            }

            .status-badge.confirmed {
                background: var(--success-gradient);
                color: white;
            }

            .status-badge.cancelled {
                background: #6c757d;
                color: white;
            }

        .dataTables_wrapper {
            color: white;
        }

            .dataTables_wrapper .dataTables_length select,
            .dataTables_wrapper .dataTables_filter input {
                background: var(--glass-bg);
                border: 1px solid var(--glass-border);
                color: white;
                border-radius: 5px;
                padding: 5px 10px;
            }

            .dataTables_wrapper .dataTables_paginate .paginate_button {
                background: var(--glass-bg);
                border: 1px solid var(--glass-border);
                color: white !important;
                border-radius: 5px;
                margin: 0 2px;
            }

                .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
                    background: rgba(255, 255, 255, 0.2) !important;
                    border-color: var(--glass-border) !important;
                    color: white !important;
                }

                .dataTables_wrapper .dataTables_paginate .paginate_button.current {
                    background: var(--secondary-gradient) !important;
                    border-color: transparent !important;
                }

        @@media (max-width: 768px) {
            .admin-container

        {
            padding: 10px;
        }

        .admin-header {
            padding: 20px;
        }

            .admin-header h1 {
                font-size: 1.5rem;
            }

        .header-content {
            flex-direction: column;
            align-items: flex-start;
        }

        .stats-cards {
            grid-template-columns: 1fr;
        }

        .action-buttons {
            flex-direction: column;
        }

        .table-container {
            padding: 15px;
            overflow-x: auto;
        }

        }
    </style>
</head>
<body>
    <div class="admin-container">
        <!-- Header -->
        <div class="admin-header">
            <div class="header-content">
                <div>
                    <h1>
                        <i class="fas fa-users-cog"></i>
                        İstifadəçi İdarəetməsi
                    </h1>
                    <p class="subtitle">Admin Panel - İstifadəçi və Rezervasiya İdarəetməsi</p>
                </div>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="btn-logout">
                        <i class="fas fa-sign-out-alt"></i>
                        Çıxış
                    </button>
                </form>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="stats-cards">
            <div class="stat-card">
                <div class="icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="number">@Model.Count</div>
                <div class="label">Ümumi İstifadəçi</div>
            </div>
            <div class="stat-card">
                <div class="icon">
                    <i class="fas fa-user-shield"></i>
                </div>
                <div class="number">@Model.Count(u => u.Roles.Contains("Admin"))</div>
                <div class="label">Admin İstifadəçi</div>
            </div>
            <div class="stat-card">
                <div class="icon">
                    <i class="fas fa-user"></i>
                </div>
                <div class="number">@Model.Count(u => u.Roles.Contains("User"))</div>
                <div class="label">Adi İstifadəçi</div>
            </div>
            <div class="stat-card">
                <div class="icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <div class="number">@ViewBag.TotalReservations</div>
                <div class="label">Ümumi Rezervasiya</div>
            </div>
            <div class="stat-card">
                <div class="icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="number">@ViewBag.PendingReservations</div>
                <div class="label">Gözləyən Rezervasiya</div>
            </div>
            <div class="stat-card">
                <div class="icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="number">@ViewBag.ConfirmedReservations</div>
                <div class="label">Təsdiqlənmiş</div>
            </div>
            <div class="stat-card">
                <div class="icon">
                    <i class="fas fa-calendar-day"></i>
                </div>
                <div class="number">@ViewBag.TodayReservations</div>
                <div class="label">Bugünkü Rezervasiya</div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-card">
            <div class="card-header-custom">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <h4>
                        <i class="fas fa-table me-2"></i>İstifadəçi Siyahısı
                    </h4>
                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-action="CreateRoles" class="btn-glass btn-success-glass">
                            <i class="fas fa-user-shield"></i>
                            Rolları Yarat
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="btn-glass btn-primary-glass">
                            <i class="fas fa-user-plus"></i>
                            Yeni İstifadəçi
                        </a>
                    </div>
                </div>
            </div>

            <div class="table-container">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-glass alert-dismissible fade show mb-4" role="alert">
                        <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-glass" id="usersTable">
                        <thead>
                            <tr>
                                <th>İstifadəçi</th>
                                <th>E-poçt</th>
                                <th>Rollar</th>
                                <th>Rezervasiyalar</th>
                                <th>Əməliyyatlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="user-info">
                                            <div class="avatar-circle">
                                                @(user.FirstName?.Substring(0, 1).ToUpper() ?? "?")
                                            </div>
                                            <div class="user-details">
                                                <h6>@user.FirstName @user.LastName</h6>
                                                <small>@user.UserName</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@user.Email</td>
                                    <td>
                                        <div class="d-flex flex-wrap align-items-center gap-2">
                                            @if (user.Roles.Any())
                                            {
                                                @foreach (var role in user.Roles)
                                                {
                                                    <span class="role-badge @(role.ToLower())">
                                                        <i class="fas fa-@(role == "Admin" ? "shield-alt" : "user")"></i>
                                                        @role
                                                        <button type="button" class="btn btn-sm ms-1 p-0"
                                                                onclick="removeRole('@user.Id', '@role')"
                                                                style="background: none; border: none; color: white; opacity: 0.7;"
                                                                title="Rolunu sil">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    </span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">
                                                    <i class="fas fa-exclamation-triangle me-1"></i>
                                                    Rol təyin edilməyib
                                                </span>
                                            }
                                            <div class="dropdown dropdown-glass">
                                                <button class="btn-glass btn-sm dropdown-toggle" type="button"
                                                        data-bs-toggle="dropdown">
                                                    <i class="fas fa-plus"></i>
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <a class="dropdown-item" href="#" onclick="assignRole('@user.Id', 'Admin')">
                                                            <i class="fas fa-shield-alt me-2"></i>Admin
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" href="#" onclick="assignRole('@user.Id', 'User')">
                                                            <i class="fas fa-user me-2"></i>User
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (user.ReservationCount > 0)
                                        {
                                            <span class="reservation-badge" onclick="showUserReservations('@user.Id')" title="Rezervasiyaları göstər">
                                                <i class="fas fa-calendar-check me-1"></i>
                                                @user.ReservationCount rezervasiya
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">
                                                <i class="fas fa-calendar-times me-1"></i>
                                                Rezervasiya yoxdur
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a asp-action="EditUser" asp-route-id="@user.Id"
                                               class="btn-glass btn-sm">
                                                <i class="fas fa-edit"></i>
                                                Redaktə
                                            </a>
                                            <button type="button" class="btn-glass btn-danger-glass btn-sm"
                                                    onclick="deleteUser('@user.Id', '@user.FirstName @user.LastName')">
                                                <i class="fas fa-trash"></i>
                                                Sil
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Rezervasiya Modal -->
    <div class="modal fade modal-glass" id="reservationsModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas fa-calendar-check me-2"></i>
                        <span id="modalUserName"></span> - Rezervasiyalar
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div id="reservationsContainer">
                        <div class="text-center">
                            <i class="fas fa-spinner fa-spin fa-2x"></i>
                            <p class="mt-2">Rezervasiyalar yüklənir...</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-glass" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Bağla
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

    <script>
        function assignRole(userId, roleName) {
            if (confirm(`Bu istifadəçiyə ${roleName} rolunu təyin etmək istədiyinizə əminsiniz?`)) {
                $.post('@Url.Action("AssignRole")', {
                    userId: userId,
                    roleName: roleName
                }, function(response) {
                    if (response.success) {
                        showNotification(response.message, 'success');
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showNotification(response.message, 'error');
                    }
                });
            }
        }

        function removeRole(userId, roleName) {
            if (confirm(`Bu istifadəçidən ${roleName} rolunu silmək istədiyinizə əminsiniz?`)) {
                $.post('@Url.Action("RemoveRole")', {
                    userId: userId,
                    roleName: roleName
                }, function(response) {
                    if (response.success) {
                        showNotification(response.message, 'success');
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showNotification(response.message, 'error');
                    }
                });
            }
        }

        function deleteUser(userId, userName) {
            if (confirm(`${userName} adlı istifadəçini silmək istədiyinizə əminsiniz? Bu əməliyyat geri alına bilməz və bütün rezervasiyaları da silinəcək.`)) {
                $.post('@Url.Action("DeleteUser")', {
                    id: userId
                }, function(response) {
                    if (response.success) {
                        showNotification(response.message, 'success');
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showNotification(response.message, 'error');
                    }
                });
            }
        }

        function showUserReservations(userId) {
            $('#modalUserName').text('');
            $('#reservationsContainer').html(`
                <div class="text-center">
                    <i class="fas fa-spinner fa-spin fa-2x"></i>
                    <p class="mt-2">Rezervasiyalar yüklənir...</p>
                </div>
            `);

            $('#reservationsModal').modal('show');

            $.get('@Url.Action("GetUserReservations")', { userId: userId }, function(response) {
                if (response.success) {
                    $('#modalUserName').text(response.userName);

                    if (response.reservations.length > 0) {
                        let html = '';
                        response.reservations.forEach(function(reservation) {
                            html += `
                                <div class="reservation-item ${reservation.status.toLowerCase()}">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h6 class="mb-0">
                                            <i class="fas fa-calendar-check me-2"></i>
                                            Rezervasiya #${reservation.id}
                                        </h6>
                                        <span class="status-badge ${reservation.status.toLowerCase()}">
                                            <i class="fas fa-${reservation.status === 'Pending' ? 'clock' : reservation.status === 'Confirmed' ? 'check' : 'times'}"></i>
                                            ${reservation.status === 'Pending' ? 'Gözləyir' : reservation.status === 'Confirmed' ? 'Təsdiqləndi' : 'Ləğv edildi'}
                                        </span>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <small><i class="fas fa-user me-1"></i> ${reservation.customerName}</small><br>
                                            <small><i class="fas fa-envelope me-1"></i> ${reservation.email}</small><br>
                                            <small><i class="fas fa-phone me-1"></i> ${reservation.phone}</small>
                                        </div>
                                        <div class="col-md-6">
                                            <small><i class="fas fa-calendar me-1"></i> ${reservation.reservationDate}</small><br>
                                            <small><i class="fas fa-clock me-1"></i> ${reservation.reservationTime}</small><br>
                                            <small><i class="fas fa-users me-1"></i> ${reservation.guestCount} nəfər</small>
                                        </div>
                                    </div>
                                    ${reservation.specialRequests ? `<div class="mt-2"><small><i class="fas fa-comment me-1"></i> ${reservation.specialRequests}</small></div>` : ''}
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i> ${reservation.createdDate}
                                        </small>
                                        <div class="btn-group">
                                            ${reservation.status === 'Pending' ? `
                                                <button class="btn btn-success-glass btn-sm" onclick="updateReservationStatus(${reservation.id}, 'Confirmed')">
                                                    <i class="fas fa-check me-1"></i>Təsdiqlə
                                                </button>
                                                <button class="btn btn-danger-glass btn-sm" onclick="updateReservationStatus(${reservation.id}, 'Cancelled')">
                                                    <i class="fas fa-times me-1"></i>Ləğv Et
                                                </button>
                                            ` : ''}
                                            <button class="btn btn-glass btn-sm" onclick="deleteReservation(${reservation.id})">
                                                <i class="fas fa-trash me-1"></i>Sil
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            `;
                        });
                        $('#reservationsContainer').html(html);
                    } else {
                        $('#reservationsContainer').html(`
                            <div class="text-center text-muted">
                                <i class="fas fa-calendar-times fa-3x mb-3"></i>
                                <h5>Rezervasiya yoxdur</h5>
                                <p>Bu istifadəçinin hələ rezervasiyası yoxdur.</p>
                            </div>
                        `);
                    }
                } else {
                    $('#reservationsContainer').html(`
                        <div class="text-center text-danger">
                            <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                            <h5>Xəta</h5>
                            <p>${response.message}</p>
                        </div>
                    `);
                }
            }).fail(function() {
                $('#reservationsContainer').html(`
                    <div class="text-center text-danger">
                        <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                        <h5>Xəta</h5>
                        <p>Rezervasiyalar yüklənərkən xəta baş verdi.</p>
                    </div>
                `);
            });
        }

        function updateReservationStatus(reservationId, status) {
            $.post('@Url.Action("UpdateReservationStatus")', {
                reservationId: reservationId,
                status: status
            }, function(response) {
                if (response.success) {
                    showNotification(response.message, 'success');
                    // Modal-ı yenilə
                    const userId = $('#reservationsModal').data('current-user-id');
                    if (userId) {
                        showUserReservations(userId);
                    }
                    // Səhifəni yenilə (statistikaları yeniləmək üçün)
                    setTimeout(() => location.reload(), 2000);
                } else {
                    showNotification(response.message, 'error');
                }
            });
        }

        function deleteReservation(reservationId) {
            if (confirm('Bu rezervasiyanı silmək istədiyinizə əminsiniz?')) {
                $.post('@Url.Action("DeleteReservation")', {
                    reservationId: reservationId
                }, function(response) {
                    if (response.success) {
                        showNotification(response.message, 'success');
                        // Modal-ı yenilə
                        const userId = $('#reservationsModal').data('current-user-id');
                        if (userId) {
                            showUserReservations(userId);
                        }
                        // Səhifəni yenilə
                        setTimeout(() => location.reload(), 2000);
                    } else {
                        showNotification(response.message, 'error');
                    }
                });
            }
        }

        function showNotification(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            const icon = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-triangle';

            const notification = $(`
                <div class="alert ${alertClass} alert-glass alert-dismissible fade show position-fixed"
                     style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;">
                    <i class="fas ${icon} me-2"></i>${message}
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
                </div>
            `);

            $('body').append(notification);

            setTimeout(() => {
                notification.alert('close');
            }, 5000);
        }

        // DataTable initialization
        $(document).ready(function() {
            $('#usersTable').DataTable({
                "pageLength": 10,
                "order": [[0, "asc"]],
                "language": {
                    "lengthMenu": "Səhifədə _MENU_ nəticə göstər",
                    "zeroRecords": "Heç bir nəticə tapılmadı",
                    "info": "_TOTAL_ nəticədən _START_ - _END_ arası göstərilir",
                    "infoEmpty": "0 nəticədən 0 - 0 arası göstərilir",
                    "infoFiltered": "(_MAX_ nəticə arasından filtrləndi)",
                    "search": "Axtarış:",
                    "paginate": {
                        "first": "İlk",
                        "last": "Son",
                        "next": "Növbəti",
                        "previous": "Əvvəlki"
                    }
                },
                "responsive": true,
                "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>rtip'
            });

            // Add floating particles
            createFloatingParticles();
        });

        function createFloatingParticles() {
            const container = document.querySelector('.admin-container');

            for (let i = 0; i < 8; i++) {
                const particle = document.createElement('div');
                particle.style.cssText = `
                    position: absolute;
                    width: ${Math.random() * 80 + 40}px;
                    height: ${Math.random() * 80 + 40}px;
                    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
                    border-radius: 50%;
                    top: ${Math.random() * 100}%;
                    left: ${Math.random() * 100}%;
                    animation: float ${Math.random() * 15 + 10}s ease-in-out infinite;
                    animation-delay: ${Math.random() * 5}s;
                    pointer-events: none;
                    z-index: 0;
                `;
                container.appendChild(particle);
            }
        }

        // Modal açıldığında current user ID-ni saxla
        $('#reservationsModal').on('show.bs.modal', function(e) {
            const userId = $(e.relatedTarget).data('user-id');
            $(this).data('current-user-id', userId);
        });
    </script>
</body>
